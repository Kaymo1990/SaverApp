<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <h1>
        <%= @user.username %>
        <%= @user.salary %>
      </h1>
    </section>
  </aside>
</div>